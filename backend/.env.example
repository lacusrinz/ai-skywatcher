# Application Configuration
APP_NAME=Deep Sky Target Recommender
APP_VERSION=1.0.0

# API Configuration
API_PREFIX=/api/v1

# Data Configuration
DATA_DIR=data
TARGETS_DATA_FILE=deepsky_objects.json
LOCATIONS_DATA_FILE=locations.json

# Mock Configuration
MOCK_MODE=true
MOCK_DEFAULT_CITY=beijing

# Astronomy Database Configuration
USE_ONLINE_DATABASES=true
SIMBAD_TIMEOUT=30
GAIA_TIMEOUT=60

# Cache Configuration
ENABLE_CACHE=true
CACHE_DIR=data/cache
CACHE_TTL=86400

# OpenNGC Configuration
OPENNGC_PATH=data/catalogs/opengc.csv
AUTO_UPDATE_CATALOGS=false
